<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__Tab</target>
        <target>lightning__UtilityBar</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__HomePage,lightning__RecordPage,lightningCommunity__Default">
            <property name="height" type="String" default="600" label="Iframe Height (px)" description="Height of the chat iframe in pixels"/>
            <property name="chatUrl" type="String" default="http://your-bucket-name.s3-website-us-west-2.amazonaws.com" label="Chat URL" description="URL of the chat application to embed"/>
        </targetConfig>
        <targetConfig targets="lightning__UtilityBar">
            <property name="height" type="String" default="400" label="Iframe Height (px)" description="Height of the chat iframe in pixels"/>
            <property name="chatUrl" type="String" default="http://your-bucket-name.s3-website-us-west-2.amazonaws.com" label="Chat URL" description="URL of the chat application to embed"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>